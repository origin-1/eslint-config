{
  "version": "0.14.0",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm install && npm run build-no-install",
    "build-no-install": "node dev/clean.js && node dev/coverage.js && node dev/update-dist.js && node dev/compile.js && npm run lint",
    "clean": "node dev/clean.js",
    "compile": "node dev/compile.js",
    "coverage": "node dev/coverage.js",
    "lint": "eslint . --ignore-path .gitignore --format compact",
    "release": "npm version -m 'Version %s'",
    "test": "node --loader ts-node/esm node_modules/mocha/bin/mocha.js --check-leaks --file test/patch-tslib.ts test/**/*.spec.ts",
    "update-dist": "node dev/update-dist.js"
  },
  "dependencies": {
    "@types/eslint": "8",
    "semver": "7"
  },
  "devDependencies": {
    "@origin-1/eslint-config": "file:dist",
    "@types/mocha": "latest",
    "@types/semver": "latest",
    "c8js": "latest",
    "eslint": "latest",
    "fast-glob": "latest",
    "mocha": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "@origin-1/eslint-plugin": ">=0.13",
    "@typescript-eslint/eslint-plugin": "^5.58",
    "@typescript-eslint/parser": "^5.58",
    "eslint": "^8.37",
    "eslint-plugin-n": "15"
  },
  "engines": {
    "node": ">=18.1"
  },
  "type": "module"
}
