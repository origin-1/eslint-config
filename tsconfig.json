{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "useUnknownInCatchVariables": true,
  },
  "include": [
    "dist",
    "src",
    "test"
  ]
}
